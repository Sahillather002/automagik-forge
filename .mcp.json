{
  "mcpServers": {
    "forge": {
      "command": "npx",
      "args": [
        "-y",
        "vibe-kanban@0.0.102",
        "--mcp"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@executeautomation/playwright-mcp-server"
      ]
    },
    "genie": {
      "command": "npx",
      "args": [
        "automagik-genie-mcp"
      ],
      "env": {
        "MCP_TRANSPORT": "stdio"
      }
    }
  }
}